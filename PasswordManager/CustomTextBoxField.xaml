<UserControl x:Class="PasswordManager.CustomTextBoxField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">

    <StackPanel x:Name="parentParent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="labelText" />
        <TextBox x:Name="inputField" Background="#FAFAFA" Margin="0, 3, 0, 3" 
                 GotFocus="inputField_GotFocus" LostFocus="inputField_LostFocus" MouseEnter="inputField_MouseEnter" MouseLeave="inputField_MouseLeave" />
        <TextBlock x:Name="errorMessageLabel" Foreground="Red"></TextBlock>
    </StackPanel>
    
</UserControl>
    
    
